<div id="<%= dom_id product %>">

  <h3><%= product.brand %> - <%= product.name %></h3>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    $<%= product.price %>
  </p>

  <p>
    <%= image_tag product.image, style: 'max-width: 400px' %>
  </p>


</div>
