<div class="checkoutForm">
  <h2>Checkout!</h2>
  <h4>Total: $<%= cart_total %></h4>

  <%= form_for @user do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <br>
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>

    <%= f.submit %>
  <% end %>

</div>


<div class="buttonContainer">
  <div class="checkoutButton1">
    <%= button_to "Cancel", cart_path, method: :get %>
  </div>
  <div class="checkoutButton2">
    <%= button_to "Purchase" %>
  </div>
</div>
